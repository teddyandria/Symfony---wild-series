{% extends 'base.html.twig' %}

{% block title %}Acteurs
{% endblock %}

{% block body %}
	<div class="media">
		<div class="media-body">
			<h1>
				{{actor.name}}
				{% for program in actor.programs %}
					<p>{{ program.title }}</p>
				{% endfor %}
			</h1>
		</div>
	</div>

	<a href="{{ path('category_index') }}">
		Retour à la liste des catégories
	</a>
{% endblock %}
